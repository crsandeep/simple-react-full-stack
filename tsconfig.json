{
  "compilerOptions": {
    "outDir": "./dist/server",
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "pretty": true,
    "sourceMap": true
  },
  "include": [
    "./src/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "jest",
    "dist_client",
    "./src/client"
  ]
}